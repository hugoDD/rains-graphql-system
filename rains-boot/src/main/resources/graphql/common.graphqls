schema {
	query: Query
	mutation: Mutation
	subscription: Subscription
}

#Root node
type Query {
	version: String
}

type Mutation {
	version: String
}

type Subscription {
	version: String
}

type Tree {
	id: String
	key: String
	icon: String
	title: String
	value: String
	text: String
	permission:String
	type: String
	order: Int
	path: String
	component: String
	children: TreeNode
	parentId: String
	hasParent: Boolean
	hasChildren: Boolean

}

# The Duration defines the start and end time for each query operation.
# Fields: `start` and `end`
#   represents the time span. And each of them matches the step.
#   ref https://www.ietf.org/rfc/rfc3339.txt
#   The time formats are
#       `SECOND` step: yyyy-MM-dd HHmmss
#       `MINUTE` step: yyyy-MM-dd HHmm
#       `HOUR` step: yyyy-MM-dd HH
#       `DAY` step: yyyy-MM-dd
#       `MONTH` step: yyyy-MM
# Field: `step`
#   represents the accurate time point.
# e.g.
#   if step==HOUR , start=2017-11-08 09, end=2017-11-08 19
#   then
#       metrics from the following time points expected
#       2017-11-08 9:00 -> 2017-11-08 19:00
#       there are 11 time points (hours) in the time span.
input Duration {
	start: String!
	end: String!
	step: Step!
}

enum Step {
	MONTH
	DAY
	HOUR
	MINUTE
	SECOND
}

enum Order {
	ASC
	DES
}

input Pagination {
	# pageNum starts in 1, the default is 1.
	pageNum: Int  = 1
	pageSize: Int = 10
	# default false
	needTotal: Boolean
}

input QueryRequest {
	#run order
	runOrder: Int = 0
	# pageNum starts in 1, the default is 1.
	pageNum: Int = 1
	pageSize: Int = 10

	sortField: String
	sortOrder: String = "desc"
	#rsql filter
	filter: String
	opt: String
	svc: String
	ids:[ID]
	datas:[Object]
	child:Object
}

enum Language {
	# For not language based agent, the language is impossible to tell.
	UNKNOWN
	JAVA
	DOTNET
	NODEJS
	PYTHON
	RUBY
}

enum Scope {
	Service
	ServiceInstance
	Endpoint
	ServiceRelation
	ServiceInstanceRelation
	EndpointRelation
}

enum DetectPoint {
	CLIENT
	SERVER
	PROXY
}
